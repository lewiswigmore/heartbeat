{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Latest Idea",
  "type": "object",
  "required": [
    "date",
    "concept",
    "summary",
    "tags",
    "theme",
    "slug",
    "repo_name",
    "source"
  ],
  "properties": {
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "concept": { "type": "string", "minLength": 1, "maxLength": 100 },
    "summary": { "type": "string", "minLength": 1, "maxLength": 400 },
    "tags": {
      "type": "array",
      "minItems": 1,
      "maxItems": 5,
      "items": { "type": "string", "pattern": "^[a-z0-9-]{2,32}$" }
    },
    "theme": { "type": "string", "minLength": 2, "maxLength": 32 },
    "slug": { "type": "string", "minLength": 2, "maxLength": 120 },
    "repo_name": { "type": "string", "minLength": 2, "maxLength": 160 },
    "source": { "type": "string", "enum": ["azure", "openai", "offline"] }
  },
  "additionalProperties": true
}
